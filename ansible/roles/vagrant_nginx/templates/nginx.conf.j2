# Let's encryptで証明書を取得する時、以下の設定はOFFにする
server {
  listen 80;
  server_name {{ nginx_server_name }};
  # Azureロードバランサーのための正常性probe
  location /probe {
    return 200;
  }
  location / {
    return 301 https://{{ nginx_server_name }}$request_uri;
  }
}

server {
  listen 80;
  server_name www.{{ nginx_server_name }};
  return 301 https://{{ nginx_server_name }}$request_uri;
}

server {
  listen 443;
  server_name www.{{ nginx_server_name }};
  return 301 https://{{ nginx_server_name }}$request_uri;
}

upstream unicorn{
  server unix:/opt/jupiter/shared/tmp/sockets/unicorn.sock;
}

server {
  listen 443 default_server;
  server_name {{ nginx_server_name }};
  include /etc/nginx/mime.types;

  ssl on;
  ssl_certificate /etc/letsencrypt/live/{{ nginx_server_name }}/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/{{ nginx_server_name }}/privkey.pem;

  root /opt/jupiter/current/public;
  access_log /var/log/nginx/jupiter_access.log;
  error_log /var/log/nginx/jupiter_error.log info;

  try_files $uri/index.html $uri @unicorn;
  # Azureロードバランサーのための正常性probe
  location /probe {
    return 200;
  }
  # 静的なjavascriptを配信するための設定
  location /static/js/ {
    rewrite  ^/static/js/(.*)$ /$1 last;
  }
  location @unicorn {
    #here_basic_auth_configure
    #auth_basic "Restricted";
    #auth_basic_user_file /etc/nginx/.htpasswd;

    proxy_set_header Host $http_host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;
    proxy_redirect off;

    proxy_pass http://unicorn;
  }

  error_page 500 502 503 504 /500.html;
  client_max_body_size 10M;
  keepalive_timeout 10;
}

